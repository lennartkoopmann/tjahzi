<configuration debug="true">
    <appender name="Loki" class="pl.tkowalcz.tjahzi.logback.LokiAppender">
        <host>${loki.host}</host>
        <port>${loki.port}</port>

        <efficientLayout>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg%n</pattern>
        </efficientLayout>

        <header>
            <name>X-Org-Id</name>
            <value>Circus</value>
        </header>

        <label>
            <name>server</name>
            <value>127.0.0.1</value>
        </label>

        <logLevelLabel>
            GATEWAY
        </logLevelLabel>
    </appender>

    <root level="ERROR">
        <appender-ref ref="Loki"/>
    </root>
</configuration>
